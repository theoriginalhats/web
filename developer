    const ownerContainer = document.getElementById('ownerContainer');
    const coOwnerContainer = document.getElementById('coOwnerContainer');
    const developerContainer = document.getElementById('developerContainer');
    const otherContainer = document.getElementById('otherContainer');
    // 
    const modal = document.getElementById('infoModal');
    const modalPfp = document.getElementById('modalPfp');
    const modalName = document.getElementById('modalName');
    const modalRoleTags = document.getElementById('modalRoleTags');
    const modalDescription = document.getElementById('modalDescription');
    const closeModal = document.getElementById('closeModal');

    function PCards(container, members) {
      members.forEach(member => {
        const card = document.createElement('div');
        card.classList.add('card');
        card.innerHTML = `
          <img src="${member.pfp}" alt="Profile Picture">
          <h3>${member.name}</h3>
          <div class="role-tags">
            ${member.roles.map(role => `<div class="role-tag">${role}</div>`).join('')}
          </div>
        `;
        card.addEventListener('click', () => {
          modalPfp.src = member.pfp;
          modalName.textContent = member.name;
          modalRoleTags.innerHTML = member.roles.map(role => `<div class="role-tag">${role}</div>`).join('');
          modalDescription.textContent = member.description;
          modal.classList.add('active');
        });
        container.appendChild(card);
      });
    }
    //
    PCards(ownerContainer, team.Owner);
    PCards(developerContainer, team.Developers);
    PCards(otherContainer, team.Other);
    PCards(coOwnerContainer, team.CoOwner);
    //
    closeModal.addEventListener('click', () => {
      modal.classList.remove('active');
    });
  </script>
